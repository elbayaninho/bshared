{% extends "BsharedBsharedBundle:Includes:Backend/layout.html.twig" %}
{% block title %}{{ parent() }} | Edit user{% endblock title %}

{% form_theme form 'BsharedUserBundle:Form:bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="content">
        <div class="col-md-12 my-box-3">
            <div class="row">
                <div class="page-header">
                    <h1>{{ '%entity% creation'|trans({'%entity%': 'User'}, 'admin') }}</h1>
                </div>
                <div class="col-md-6 well">
                    {{ form_start(form, {action: path('admin_users_create')}) }}
                    {{ form_widget(form) }}
                    <p>
                        <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'admin') }}</button>
                    </p>
                    {{ form_end(form) }}

                    <div class="btn-group record_actions">

                        <a class="btn btn-info" href="{{ path('admin_users') }}">
                            <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
